<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundWhite"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/equipmentToolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/toolbar_grad_yellow"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:theme="@style/ToolbarTheme"
        app:title="Equipment Name"
        app:titleTextColor="#ffffff"></android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/exercise_image_section"
        android:layout_width="match_parent"
        android:layout_height="98dp"
        android:layout_below="@+id/equipmentToolbar"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="这里改成image，基于exercise的图" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/weight_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/exercise_image_section"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/weight_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="70dp"
            app:srcCompat="@drawable/weight" />

        <Spinner
            android:id="@+id/weight_spinner"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/number_set_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/weight_section"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/number_set_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="70dp"
            app:srcCompat="@drawable/number_set" />

        <EditText
            android:id="@+id/number_set_input"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:hint="Enter number of sets"
            android:inputType="textPersonName" />
    </LinearLayout>

    <Button
        android:id="@+id/exercise_add_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/number_set_section"
        android:layout_marginTop="50dp"
        android:text="ADD" />
</RelativeLayout>